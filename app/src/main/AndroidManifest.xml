<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ilittle7.router">

    <application
        android:name="com.ilittle7.router.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.ilittle7.router.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ilittle7.router.activity.TestAActivity" />
        <activity android:name="com.ilittle7.router.activity.TestBActivity" />
        <activity android:name="com.ilittle7.router.activity.TestCActivity" />
        <activity
            android:name="com.ilittle7.router.AppLinkActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="router"
                    android:scheme="butter" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilittle7.router.activity.AdvActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.TransitionActivity" />

        <service android:name="com.ilittle7.router.service.TestService" />
        <service android:name=".service.TestAService" />
        <service android:name=".service.TestBService" />
        <service android:name=".service.TestCService" />
    </application>
</manifest>